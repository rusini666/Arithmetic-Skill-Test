<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutPage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/material_dynamic_primary60"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/student_id"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="116dp" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/student_name"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="162dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="294dp"
        android:layout_height="132dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="@string/message"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="194dp"
        tools:text="I confirm that I understand what plagiarism is and have read and understood the section on Assessment Offences in the Essential Information for Students. The work that I have submitted is entirely my own. Any work from other authors is duly referenced and acknowledged." />

</LinearLayout>